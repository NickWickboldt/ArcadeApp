<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ArcadeAppNick.MainPage">

    <ScrollView>
        <AbsoluteLayout BackgroundColor="Black" HeightRequest="1200" SizeChanged="AbsoluteLayout_SizeChanged">
            <Grid 
                AbsoluteLayout.LayoutBounds="0,0, 1.0,1.0"
                AbsoluteLayout.LayoutFlags="SizeProportional,PositionProportional"
                >
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <AbsoluteLayout Grid.Column="0" Grid.Row="0" HeightRequest="400" Padding="10">
                    <ImageButton 
                        Source="quiz_splash.webp" 
                        AbsoluteLayout.LayoutBounds="0,0,1.0,0.8"
                        AbsoluteLayout.LayoutFlags="SizeProportional,PositionProportional"
                        BackgroundColor="DarkOliveGreen"
                        x:Name="ImageButton1"
                        Clicked="ImageButton1_Clicked"
                        />
                    <Label 
                        Text="Animal Quiz"
                        FontSize="30"
                        HorizontalOptions="Start"
                        TextColor="GreenYellow"
                        AbsoluteLayout.LayoutBounds="0,0.875,1.0,0.1"
                        AbsoluteLayout.LayoutFlags="SizeProportional,PositionProportional" 
                        />
                    <Label 
                        Text="This is a quiz all about animals! Can you beat the high score?"
                        FontSize="20"
                        TextColor="GreenYellow"
                        AbsoluteLayout.LayoutBounds="0,0.95,1.0,0.075"
                        AbsoluteLayout.LayoutFlags="SizeProportional,PositionProportional"
                        x:Name="App_Desc1"
                        />
                    <Label 
                        Text="Rating: 10/10"
                        FontSize="15"
                        TextColor="GreenYellow"
                        AbsoluteLayout.LayoutBounds="0,1.025,1.0,0.075"
                        AbsoluteLayout.LayoutFlags="SizeProportional,PositionProportional"
                        />
                </AbsoluteLayout>
                <AbsoluteLayout Grid.Column="1" Grid.Row="0" HeightRequest="400"  Padding="10">
                    <ImageButton 
                        Source="storybook_splash.jpg" 
                        AbsoluteLayout.LayoutBounds="0,0,1.0,0.8"
                        AbsoluteLayout.LayoutFlags="SizeProportional,PositionProportional"
                        BackgroundColor="DarkOliveGreen"
                        x:Name="ImageButton2"
                        Clicked="ImageButton2_Clicked"
                        />
                    <Label 
                        Text="Storybook"
                        FontSize="30"
                        AbsoluteLayout.LayoutBounds="0,0.875,1.0,0.1"
                        AbsoluteLayout.LayoutFlags="SizeProportional,PositionProportional"
                        TextColor="GreenYellow"
                        />
                    <Label 
                        Text="Choose your own adventure! Can you complete all the endings?"
                        FontSize="20"
                        AbsoluteLayout.LayoutBounds="0,0.95,1.0,0.075"
                        AbsoluteLayout.LayoutFlags="SizeProportional,PositionProportional"
                        TextColor="GreenYellow"
                        x:Name="App_Desc2"
                        />
                    <Label 
                        Text="Rating: 10/10"
                        FontSize="15"
                        AbsoluteLayout.LayoutBounds="0,1.025,1.0,0.075"
                        AbsoluteLayout.LayoutFlags="SizeProportional,PositionProportional"
                        TextColor="GreenYellow"
                        />
                </AbsoluteLayout>
                <AbsoluteLayout Grid.Column="0" Grid.Row="1" HeightRequest="400" Padding="10">
                    <ImageButton 
                        Source="platform_splash.jpg" 
